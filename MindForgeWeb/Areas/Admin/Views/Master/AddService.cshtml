@model MindForgeWeb.Models.ServiceDto
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    @*   <h4>Validation Form</h4> *@
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/Admin/Dashboard/Index">
                                <i class="fa-solid fa-house-laptop" style="font-size: 15px;"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item"> Add Master</li>
                        <li class="breadcrumb-item active">Add Service</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Add Service</h4>
                    </div>
                    <div class="card-body"> 
                        <form class="row g-3 " method="post" action="AddService" enctype="multipart/form-data">
                            <input class="form-control" asp-for="ServiceId" id="" type="hidden">
                            
                            <div class="col-md-4 position-relative">
                                <label class="form-label" for="validationTooltip01">Service Name</label>
                                <input class="form-control" asp-for="ServiceName" id="validationTooltip01" type="text" placeholder="Enter Service Name" required="" autocomplete="off">
                                <span class="text-danger" asp-validation-for="ServiceName"></span>
                            </div> 
                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

