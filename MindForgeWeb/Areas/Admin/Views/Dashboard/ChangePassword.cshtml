@model MindForgeWeb.Models.UserProfileDto
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

<html>
    <head>
        <style>
        input[readonly] {
            background-color:aliceblue; 
            cursor: not-allowed;
        }

        </style>
    </head>
    <body>


  
<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    @*   <h4>Validation Form</h4> *@
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/Admin/Dashboard/Index">
                                <svg class="stroke-icon">
                                    <use href="~/assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                       @*  <li class="breadcrumb-item"> AddMaster</li>
                        <li class="breadcrumb-item active">Add Vendor</li> *@
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Change  Password</h4>

                    </div>
                    <div class="card-body">
                        <form class="row g-3 " method="post" action="ChangePassword" enctype="multipart/form-data">
                            <input class="form-control" asp-for="UserId" id="" type="hidden">
                          
                                <div class="col-md-3 position-relative">
                                    <label class="form-label" for="validationTooltip01">User Name</label>
                                <input class="form-control" asp-for="UserName" id="validationTooltip01" type="text" value="@Model?.UserName" placeholder="" required="" readonly>
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>

                                <div class="col-md-3 position-relative">
                                    <label class="form-label" for="validationTooltip03"> Phone Nu</label>
                                    <input class="form-control" id="mobile" asp-for="MobileNu" type="text" value="@Model?.MobileNu" required="" id="mobile" placeholder="" readonly>
                                    <span class="text-danger" asp-validation-for="MobileNu" id="mobileError"></span>
                                </div>
                                <div class="col-md-3 position-relative" style="display:none;">
                                    <label class="form-label" for="validationTooltipUsername">Email</label>
                                <input class="form-control" asp-for="Email" id="validationTooltip03" type="text" value="@Model?.Email" required="" placeholder="" readonly>
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="col-md-3 position-relative">
                                    <label class="form-label" for="validationTooltip03">Password</label>
                                    <input class="form-control" id="mobile" asp-for="Password" type="text" value="@Model?.Password" required="" id="mobile" placeholder="">
                                    <span class="text-danger" asp-validation-for="Password" id="mobileError"></span>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary" type="submit">Submit</button>
                                </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

</body>
</html>



<script>
    const mobileInput = document.getElementById('mobile'); // Correct ID
    const mobileError = document.getElementById('mobileError');

    // Validate mobile number and limit to 10 digits
    mobileInput.addEventListener('input', function () {
        // Limit to 10 digits
        if (mobileInput.value.length > 10) {
            mobileInput.value = mobileInput.value.slice(0, 10);
        }

        // Validate mobile number
        const mobileRegex = /^\d{10}$/; // 10-digit regex
        if (mobileInput.value && !mobileRegex.test(mobileInput.value)) {
            mobileError.textContent = 'Please enter a valid 10-digit phone number.';
        } else {
            mobileError.textContent = '';
        }
    });
</script>
